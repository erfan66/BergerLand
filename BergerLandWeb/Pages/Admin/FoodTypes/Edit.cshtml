@page
@model BergerLandWeb.Pages.Admin.FoodTypes.EditModel

<form method="post">
    <input hidden asp-for="FoodType.Id" />
    <div class="p-3 mt-4">
        <div p-3 mt-4>
            <h2 class="text-primary pl-3">Edit FoodType</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for=FoodType.Name></label>
            <input asp-for=FoodType.Name class="form-control" />
            <span asp-validation-for="FoodType.Name" class=text-danger></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary style="width:150px;">Back to List</a>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}